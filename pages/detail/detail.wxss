.section {
  padding: 15px;
}
.flex-wrap {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 260px;
  margin: 0 auto;
}
.flex-item {
  display: -webkit-flex;
  display: flex;
  flex-shrink: 1;
  width: 80px;
  height: 80px;
  border-radius: 3px;
  line-height: 80px;
  color: #fff;
  justify-content: center;
  background: #0bdd23;
}
.item-media {
  background-color: #eeeeee;
  width: 100%;
}