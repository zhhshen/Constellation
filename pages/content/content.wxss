.loading-page {
  position: fixed;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  overflow: auto;
}
.image-box {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}
.image-box image {
  width: 100%;
  height: 100%;
}
.main-wrap {
  padding: 180rpx 0;
}
.main-wrap.image {
  padding: 0 0 180rpx;
}
.main-wrap.image image {
  width: 100%;
}
.content-area {
  margin: 10rpx 60rpx 0;
  color: #000;
  font-size: 20px;
}
.content {
  border-bottom: 1rpx solid #eee;
}
.btn {
  text-align: center;
  color: #999;
  font-size: 16px;
  position:fixed;
  width: 100%;
  height: 200rpx;
  bottom:0;
  left: 50%;
  margin-left: -50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btn-item {
  width: 50%;
  height: 200rpx;
}
.name {
  margin-top: 10rpx;
  text-align: right;
  color: #5cb43f;
  font-size: 16px;
}
.heart-shape{
  position:relative;
  align-items: center;
  width: 60rpx;
  height:60rpx;
  background-color:#E64340;
  border-radius:3rpx;
  transform:rotate(45deg);top:50%;left:50%;
  margin:-30rpx;
}
.heart-shape:before{
  content:'';
  position:absolute;
  width:60rpx;
  height:60rpx;
  background-color:#E64340;
  border-radius:50%;
  top:0px;
  left:-30rpx;
}
.heart-shape:after{
  position:absolute;
  width:60rpx;
  height:60rpx;
  content:'';
  background-color:#E64340;
  border-radius:50%;
  left:0px;
  top:-30rpx;
}
.heart-shape.left {
  background-color: #1AAD19;
}
.heart-shape.left::before {
  background-color: #1AAD19;
}
.heart-shape.left::after {
  background-color: #1AAD19;
}
.hoverHeart {
  transform: rotate(45deg) scale(1.2);
}
.clock {
   -webkit-animation: go 1s ease-in-out alternate infinite;
   -moz-animation: go 1s ease-in-out alternate infinite;
   animation: go 1s ease-in-out alternate infinite;
}
@keyframes go {
   0% {
       -webkit-transform: rotate(45deg);
       -webkit-transform-origin: top center;
       -moz-transform: rotate(45deg);
       -moz-transform-origin: top center;
       transform: rotate(45deg);
       transform-origin: top center;
    }
    100% {
       -webkit-transform: rotate(-45deg);
       -webkit-transform-origin: top center;
       -moz-transform: rotate(-45deg);
       -moz-transform-origin: top center;
       transform: rotate(-45deg);
       transform-origin: top center;
    }
}

.p-body {
  position:absolute;
  height: 80%;
  width:100%;
  overflow-y: auto;
}
.p-swiper-box {
  height: 100%;
}
.p-swiper-content {
  overflow-y: auto;
}
.p-swiper-content .cover {
  width: 100%;
}
.p-swiper-content .area {
  margin: 10rpx 40rpx 0;
