<view class="loading-page p-wrapper">
  <!-- 内容 -->
  <view class="p-body">
    <swiper class="p-swiper-box" current="{{ current }}" bindchange="swiperChange">
      <block wx:for="{{ source.poetry}}" wx:for-item="item" wx:key="item">
        <swiper-item>
          <view class="p-swiper-content">
            <view class="p-swiper-content-inner">
              <image class="cover" 
              wx:if="{{item.imageUrl}}" 
              src="{{item.imageUrl}}"
              data-src="{{item.imageUrl}}"
              bindtap="previewImage" 
              mode="aspectFit"></image>
              <view class="area">
                <view class='content' 
                  wx:if="{{ item.content }}">{{ item.content }}</view>
                <view class="name">{{ item.author }} {{ item.name }}</view>
              </view>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 切换按钮 -->
  <view class="p-footer">
    <view class='btn'>
      <view class='btn-item'>
        <view class='arrow left-arrow' data-tag="prev" bindtap="toPage">{{ '<' }}</view>
      </view>
       <!-- <view class='btn-item'>
        <view class='save' bindtap="toSave">保存</view>
      </view>  -->
      <view class='btn-item'>
        <button class='share' open-type="share">分享给好友</button>
      </view>
      <view class='btn-item' >
        <view class='arrow right-arrow' data-tag="next" bindtap="toPage">{{ '>'}}          </view>
      </view>
    </view>
  </view>
</view>